<div id="background">
  <header class="cf">
    <div class="wrapper_wide">
      <a href="#" id="logo">Podcast.fm</a>
      <nav>
        <ul>
          <% unless modcast_signed_in? %>
            <li><a href="#">Explore</a></li>
            <li><%= link_to "Sign In", new_modcast_session_path %></li>
            <li><%= link_to "Create a Podcast", new_modcast_registration_path %></li>
          <% else %>
            <li><a href="#">Dashboard</a></li>
            <li><a href="#">Explore</a></li>
            <li><%= link_to "Sign Out", destroy_modcast_session_path, method: :delete %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>
  <div class="wrapper_skinny">
    <h1>Find your new favorite<br> podcast, or create your own.</h1>
    <%= link_to "Create a Podcast", new_modcast_registration_path, class: "button button_highlight" %>
    <a href="podcasts.html" class="button button_white">Explore</a>
  </div>
</div>
